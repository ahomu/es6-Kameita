{
  "parser": "babel-eslint",

  "env": {
    "browser": true,
    "node": true
  },

  "rules": {
    "no-unused-expressions": 0,
    "no-use-before-define": 0,
    "quotes": [2, "single"],
    "no-multi-spaces": [2, {
      "exceptions": {
        "Property": true,
        "ImportDeclaration": true,
        "VariableDeclarator": true,
        "AssignmentExpression": true
      }
    }],
    "key-spacing": [2, {
      "align": "colon",
      "beforeColon": true,
      "afterColon": true
    }]
  }
}
